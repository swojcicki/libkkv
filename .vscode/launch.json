    "version": "0.2.0",
    "configurations": [
        {
            "name": "example test (db)",
            "type": "cppdbg",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb"
            },
            "osx": {
                "MIMode": "lldb"
            },
            "request": "launch",
            "program": "${workspaceRoot}/debug/example/test/test",
            "args": ["--db"],
            "cwd": "${workspaceRoot}/debug",
            "preLaunchTask": "build example test"
        },
        {
            "name": "example test (db) [new]",
            "type": "cppdbg",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "osx": {
                "MIMode": "lldb",
            },
            "request": "launch",
            "program": "${workspaceRoot}/debug/example/test/test",
            "args": ["--db"],
            "cwd": "${workspaceRoot}/debug",
            "preLaunchTask": "build example test with new container"
        },
        {
            "name": "example test (slice)",
            "type": "cppdbg",
            "linux": {
                "MIMode": "gdb",
                "miDebuggerPath": "/usr/bin/gdb",
            },
            "osx": {
                "MIMode": "lldb",
            },
            "request": "launch",
            "program": "${workspaceRoot}/debug/example/test/test",
            "args": ["--slice"],
            "cwd": "${workspaceRoot}/debug",
            "preLaunchTask": "build example test"
        }
    ]
}
